{
  "name": "@karuta/linguist",
  "version": "0.7.2",
  "description": "Extract messages and manage translations with FormatJS",
  "type": "module",
  "bin": {
    "linguist": "bin/linguist.js"
  },
  "main": "bin",
  "scripts": {
    "build": "tsc -p src",
    "debug": "tsc -p src --incremental --sourceMap",
