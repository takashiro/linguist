    "jest": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage --no-cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/takashiro/linguist.git"
  },
  "keywords": [
    "react",
    "i18n",
    "extract"
  ],
