  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/takashiro/linguist/issues"
  },
  "homepage": "https://github.com/takashiro/linguist#readme",
  "dependencies": {
    "@formatjs/icu-messageformat-parser": "^2.7.3",
    "@formatjs/ts-transformer": "^3.13.9",
    "cosmiconfig": "^9.0.0",
    "glob": "^10.3.10",
    "typescript": "^5.5.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^18.19.3",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
